{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "sourceMap": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["dom", "es7", "es2015", "es2017"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "meteor-typings"
    ]
  },
  "include": [
    "client/**/*",
    "imports/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}